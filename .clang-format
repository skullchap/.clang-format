BasedOnStyle: GNU

# Use 8 spaces for indentation
IndentWidth: 8
TabWidth: 8
UseTab: Always

# Braces on the same line for control statements (if, for, while, etc.)
BreakBeforeBraces: Custom
BraceWrapping:
  AfterControlStatement: false
  AfterEnum: true
  AfterFunction: true
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: true
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false

# Remove spaces around condition in control statements
SpaceBeforeParens: false
SpacesInParentheses: false
SpaceAfterCStyleCast: false

# Vertically align assignments
AlignConsecutiveAssignments: true


